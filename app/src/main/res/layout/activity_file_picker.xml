<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_image"
    tools:context=".FilePickerActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="220dp"
        android:layout_height="190dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        android:contentDescription="App logo" />

    <TextView
        android:id="@+id/selectedToolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Tool:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/filePickerImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/file_picker"
        android:contentDescription="Select File"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless" />

    <Button
        android:id="@+id/browseButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Browse Files"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/fileDetailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center" />
</LinearLayout>
